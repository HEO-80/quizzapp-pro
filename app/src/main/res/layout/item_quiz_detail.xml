<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- item_quiz_detail.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_shape"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <!-- Indicador de Correctitud -->
        <ImageView
            android:id="@+id/ivCorrectIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"/>

        <!-- Detalles de la Pregunta -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvQuestionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Pregunta: 3002"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvUserAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu Respuesta: Fase de tormenta"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvCorrectAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuesta Correcta: Fase de tormenta"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>